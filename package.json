{
  "name": "engage",
  "version": "1.0.0",
  "description": "Engage is a microblogging social media platform",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "build:ui": "rm -rf build && cd ../engagefrontend/ && npm run build --prod && cp -r build/ ../Engage/",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .js ."
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krp9848/Engage.git"
  },
  "author": "Kabiraj Pant",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krp9848/Engage/issues"
  },
  "homepage": "https://github.com/krp9848/Engage#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "mongoose-unique-validator": "^2.0.3"
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.11",
    "supertest": "^6.1.3"
  }
}
